<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProductActivity">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_to_card">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:paddingBottom="134dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/backbutton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="26dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_chevron_left_black_24dp"
                    app:tint="@color/black" />

                <ImageButton
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="306dp"
                    android:layout_marginTop="26dp"
                    android:background="@null"
                    app:srcCompat="@drawable/bookmark"
                    app:tint="@color/black" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="348dp"
                android:layout_height="348dp"
                android:layout_marginLeft="33dp"
                android:elevation="99dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="57dp">

                <ImageView
                    android:layout_width="348dp"
                    android:layout_height="348dp"
                    android:src="@drawable/prototype" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="15sp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/prototype" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:alpha="0.2"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="15sp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/prototype" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:alpha="0.2"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="15sp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/prototype" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:alpha="0.2"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="15sp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/prototype" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/prototype_name"
                android:layout_width="137dp"
                android:layout_height="35dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:text="Prototype 4"
                android:textColor="@color/black"
                android:textSize="27dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="â‚¹1,600"
                android:textColor="#005DFF"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Color :"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginLeft="193dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Quantity :"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="15sp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15sp"
                    app:cardBackgroundColor="#BC4747"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15sp"
                    app:cardBackgroundColor="#FEC286"
                    app:cardCornerRadius="50dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15sp"
                    app:cardBackgroundColor="#47BC66"
                    app:cardCornerRadius="50dp" />

                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_quantity"
                    android:text="-"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />

                <TextView
                    android:layout_width="9dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="18dp"
                    android:text="1"
                    android:textColor="#005DFF"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_quantity"
                    android:text="+"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="366dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                app:cardBackgroundColor="#F5F5F5">

                <TextView
                    android:layout_width="366dp"
                    android:layout_height="96dp"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="16dp"
                    android:padding="2dp"
                    android:text="Item details given here."
                    android:textColor="#949494"
                    android:textSize="16dp" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/add_to_card"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/add_to_card_round"
        android:layout_height="72dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="118dp"
        android:src="@drawable/car"/>

    </LinearLayout>


</RelativeLayout>